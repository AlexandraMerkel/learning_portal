= form_for @ranking_algorithm do |f|
  = error_messages_for @ranking_algorithm

  .row
    .col-md-6
      .form-group
        = f.label :algorithm_name, class: 'test'
        = f.text_field :algorithm_name, class: 'form-control'
        = f.error_messages_for(:algorithm_name)
  .row
    .col-md-6
      .form-group
        = f.label :template, class: 'test'
        = f.text_area :template, class: 'form-control'
        = f.error_messages_for(:template)
  .row
    .col-md-6
      .form-group
        = f.submit t('helpers.submit.submit'), class: 'btn btn-primary'
