= form_for @ranking_algorithm do |f|
  - if @ranking_algorithm.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ranking_algorithm.errors.count, "error")} prohibited this ranking_algorithm from being saved:"
      %ul
        - @ranking_algorithm.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :algorithm_name
    = f.text_field :algorithm_name
  .field
    = f.label :template
    = f.text_area :template
  .actions
    = f.submit 'Save'
