/%link{:href => "https://cdn.datatables.net/v/bs/dt-1.10.15/datatables.min.css", :rel => "stylesheet", :type => "text/css"}/
/%script{:src => "https://cdn.datatables.net/v/bs/dt-1.10.15/datatables.min.js", :type => "text/javascript"}

.tocenter
  %h5 Рейтинговая таблица успеваемости студентов

- if @current_role_user.present?
  / выделяем секции дисциплины, связанные именно с текущим сообществом
  - dis_sections = selection_of_section(@community.community_disciplines, @community)
  / если массив пуст, значит в сообществе пока нет дисциплин, т.е. таблицу не отрисовываем
  - if !dis_sections.empty?
    / в будущем необходимо разделение по ролям (- if @current_role_user.is_student?)
    %table.table.table-bordered.table-hover#rankTable
      %thead
        %tr
          %th №
          %th ФИО студента
          - dis_sections.each do |ds|
            %th= ds.section_name
          %th Сумма

      %tbody
        - @community.community_users.each_with_index do |u, i|
          / показывать только студентов
          - if u.user.role_users.first.role.role_name_eng == "student"
            / выделять цветом для студента строку с его оценками
            - if u.user.id == @current_role_user.id
              %tr{:bgcolor => "#e4edeb" }
                %td
                  = succeed '.' do
                    = i + 1
                %td
                  =u.user.last_name + " " + u.user.first_name + " " + u.user.second_name
                - final_grade = 0
                - dis_sections.each do |ds|
                  %td
                    - ds.marks.each do |m|
                      / для каждой оценки проверяем текущий ли студент
                      - if m.student.id == u.user.id
                        = m.mark_value
                        - final_grade += m.mark_value
                %td=final_grade

            - else
              %tr
                %td
                  = succeed '.' do
                    = i + 1
                %td
                  =u.user.last_name + " " + u.user.first_name + " " + u.user.second_name
                - final_grade = 0
                - dis_sections.each do |ds|
                  %td
                    - has_mark = false
                    - ds.marks.each do |m|
                      - if m.student.id == u.user.id
                        %span.mark_editable{title: User.where('id = ?', m.teacher_id).first.last_name + " " + User.where('id = ?', m.teacher_id).first.first_name + " " + User.where('id = ?', m.teacher_id).first.second_name + " " + lnil(m.updated_at), data: {id: m.id, ds_id: ds.id, student_id: u.user.id, teacher_id: @current_user_object.id, report: Time.zone.now.to_date, old_value: m.mark_value, url: update_mark_marks_path}, contenteditable: true, style: 'display: inline-block; min-height: 20px; min-width: 20px;'}
                          = m.mark_value
                        - final_grade += m.mark_value
                        - has_mark = true
                    - unless has_mark
                      %span.mark_editable{title: User.where('id = ?', m.teacher_id).first.last_name + " " + User.where('id = ?', m.teacher_id).first.first_name + " " + User.where('id = ?', m.teacher_id).first.second_name + " " + lnil(m.updated_at), data: {id: nil, ds_id: ds.id, student_id: u.user.id, teacher_id: @current_user_object.id, report: Time.zone.now.to_date, old_value: '', url: update_mark_marks_path}, contenteditable: true, style: 'display: inline-block; min-height: 20px; min-width: 20px;'}
                        \-
                %td
                  =final_grade



/= render 'discipline_sections/form'