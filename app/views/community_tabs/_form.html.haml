= form_for @community_tab do |f|
  - if @community_tab.errors.any?
    #error_explanation
      %h2= "#{pluralize(@community_tab.errors.count, "error")} prohibited this community_tab from being saved:"
      %ul
        - @community_tab.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :community_section
    = f.text_field :community_section
  .field
    = f.label :tab_name
    = f.text_field :tab_name
  .field
    = f.label :tab_position
    = f.number_field :tab_position
  .actions
    = f.submit 'Save'
