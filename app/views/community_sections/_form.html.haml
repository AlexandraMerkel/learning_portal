= form_for @community_section do |f|
  - if @community_section.errors.any?
    #error_explanation
      %h2= "#{pluralize(@community_section.errors.count, "error")} prohibited this community_section from being saved:"
      %ul
        - @community_section.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :section_name
    = f.text_field :section_name
  .field
    = f.label :section_type
    = f.select(:section_type, section_type_options(f.object.section_type))
  .field
    = f.label :section_position
    = f.select(:section_position, section_position_options(f.object.section_position))
  .field
    = f.label :community_id
    = f.select(:community_id, community_options(f.object.community_id))
  .actions
    = f.submit 'Save'
