= form_for @institution_user do |f|
  - if @institution_user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@institution_user.errors.count, "error")} prohibited this institution_user from being saved:"
      %ul
        - @institution_user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :rank
    = f.text_field :rank
  .field
    = f.label :user_id
    = f.select(:user_id, user_options(f.object.user_id))
  .field
    = f.label :institution_id
    = f.select(:institution_id, institution_options(f.object.institution_id))
  .actions
    = f.submit 'Save'
