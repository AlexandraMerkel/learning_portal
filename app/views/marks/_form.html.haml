= form_for @mark do |f|
  - if @mark.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mark.errors.count, "error")} prohibited this mark from being saved:"
      %ul
        - @mark.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :mark_value
    = f.number_field :mark_value
  .field
    = f.label :report
    = f.date_select :report
  .field
    = f.label :discipline_section
    = f.text_field :discipline_section
  .field
    = f.label :student
    = f.text_field :student
  .field
    = f.label :teacher
    = f.text_field :teacher
  .actions
    = f.submit 'Save'
