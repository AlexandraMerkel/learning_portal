= form_for @role do |f|
  - if @role.errors.any?
    #error_explanation
      %h2= "#{pluralize(@role.errors.count, "error")} prohibited this role from being saved:"
      %ul
        - @role.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :role_name
    = f.text_field :role_name
  .field
    = f.label :full_name
    = f.text_field :full_name
  .field
    = f.label :role_name_eng
    = f.text_field :role_name_eng
  .actions
    = f.submit 'Save'
