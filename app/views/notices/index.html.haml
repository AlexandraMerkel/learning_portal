%h1 Listing notices

%table
  %thead
    %tr
      %th Notice type
      %th User
      %th
      %th
      %th Community section
      %th
      %th
      %th

  %tbody
    - @notices.each do |notice|
      %tr
        %td= notice.notice_type
        %td= notice.user.last_name
        %td= notice.user.first_name
        %td= notice.user.second_name
        %td= notice.community_section.section_type
        %td= link_to 'Show', notice
        %td= link_to 'Edit', edit_notice_path(notice)
        %td= link_to 'Destroy', notice, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

