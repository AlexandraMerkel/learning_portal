= form_for @notice do |f|
  - if @notice.errors.any?
    #error_explanation
      %h2= "#{pluralize(@notice.errors.count, "error")} prohibited this notice from being saved:"
      %ul
        - @notice.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :notice_type
    = f.number_field :notice_type
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :community_section
    = f.text_field :community_section
  .actions
    = f.submit 'Save'
