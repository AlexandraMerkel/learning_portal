= form_for @notice do |f|
  - if @notice.errors.any?
    #error_explanation
      %h2= "#{pluralize(@notice.errors.count, "error")} prohibited this notice from being saved:"
      %ul
        - @notice.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :notice_type
    = f.select(:notice_type, type_options(f.object.notice_type))
  .field
    = f.label :user_id
    = f.select(:user_id, user_options(f.object.user_id))
  .field
    = f.label :community_section_id
    = f.select(:community_section_id, community_section_options(f.object.community_section_id))
  .actions
    = f.submit 'Save'
