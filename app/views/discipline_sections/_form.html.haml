= form_for @discipline_section do |f|
  = error_messages_for @discipline_section

  .row
    .col-md-6
      .form-group
        = f.label :discipline_type
        = f.number_field :discipline_type
        = f.error_messages_for(:discipline_type)
  .row
    .col-md-6
      .form-group
        = f.label :discipline_id
        = f.select(:discipline_id, discipline_options(f.object.discipline_id), {}, class: 'form-control')
        = f.error_messages_for(:discipline_id)
  .row
    .col-md-6
      .form-group
        = f.label :section_name
        = f.text_field :section_name, class: 'form-control'
        = f.error_messages_for(:section_name)
  .row
    .col-md-6
      .form-group
        = f.label :section_type
        = f.select(:section_type, section_type_options(f.object.section_type), {}, class: 'form-control')
        = f.error_messages_for(:section_type)
  .row
    .col-md-3
      .form-group
        = f.label :require_type
        = f.check_box :require_type, style: 'margin: 0px 0px 0px 10px; vertical-align: middle;'
        = f.error_messages_for(:require_type)
  .row
    .col-md-3
      .form-group
        = f.label :min_score
        = f.number_field :min_score, :min => 1, :max => 99, class: 'form-control'
        = f.error_messages_for(:min_score)
    .col-md-3
      .form-group
        = f.label :max_score
        = f.number_field :max_score, :min => 1, :max => 99, class: 'form-control'
        = f.error_messages_for(:max_score)
  .row
    .col-md-3
      .form-group
        = f.label :weight
        = f.number_field :weight, :min => 1, :max => 10, class: 'form-control'
        / сделать оформление number field
        = f.error_messages_for(:weight)
    .col-md-3
      .form-group
        = f.label :attenuation_constant
        = f.number_field :attenuation_constant, :step => 0.1, :min => 0.1, :max => 1, class: 'form-control'
        = f.error_messages_for(:attenuation_constant)
  .row
    .col-md-6
      .form-group
        = f.label :optimal_time
        .input-group.date.datepicker
          = f.text_field :optimal_time, class: 'form-control date datepicker'
          %span.input-group-addon
            %span.glyphicon.glyphicon-calendar
        = f.error_messages_for(:optimal_time)
  .row
    / глюк, если перенести на одну строку
    .col-md-6
      .form-group
        = f.label :limit_time
        .input-group.date.datepicker
          = f.text_field :limit_time, class: 'form-control date datepicker'
          %span.input-group-addon
            %span.glyphicon.glyphicon-calendar
        = f.error_messages_for(:limit_time)
  .row
    .col-md-6
      .form-group
        = f.submit t('helpers.submit.submit'), class: 'btn btn-primary'
