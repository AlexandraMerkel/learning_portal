= form_for @community_news do |f|
  = error_messages_for @community_news

  .toright
    .row
      .col-md-6
        .form-group
          = f.label :news_body
          = f.text_area :news_body
    .row
      .col-md-6
        .form-group
          = f.label :user_id
          = f.text_field :user
    .row
      .col-md-6
        .form-group
          = f.label :community_id
          = f.text_field :community
    .row
      .col-md-6
        .form-group
          = f.submit 'Опубликовать', class: 'btn btn-primary'