%h1 Listing groups

%table
  %thead
    %tr
      %th Group name
      %th Group start
      %th Archive time
      %th Term
      %th
      %th
      %th

  %tbody
    - @groups.each do |group|
      %tr
        %td= group.group_name
        %td= group.group_start
        %td= group.archive_time
        %td= group.term
        %td= link_to 'Show', group
        %td= link_to 'Edit', edit_group_path(group)
        %td= link_to 'Destroy', group, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

