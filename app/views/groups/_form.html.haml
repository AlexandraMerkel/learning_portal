= form_for @group do |f|
  = error_messages_for @group

  .row
    .col-md-6
      .form-group
        = f.label :group_name, class: 'test'
        = f.text_field :group_name, class: 'form-control'
        = f.error_messages_for(:group_name)
    .col-md-5
      .form-group
        = f.label :term_id
        = f.select(:term_id, term_options(f.object.term_id), {}, class: 'form-control')
        = f.error_messages_for(:term_id)
  .row
    .col-md-3
      .form-group
        = f.label :group_start
        .input-group.date.datepicker
          = f.text_field :group_start, class: 'form-control date datepicker'
          %span.input-group-addon
            %span.glyphicon.glyphicon-calendar
        = f.error_messages_for(:group_start)
    .col-md-3
      .form-group
        = f.label :archive_time
        .input-group.date.datepicker
          = f.text_field :archive_time, class: 'form-control date datepicker'
          %span.input-group-addon
            %span.glyphicon.glyphicon-calendar
        = f.error_messages_for(:archive_time)

  .row
    .col-md-6
      .form-group
        = f.submit t('helpers.submit.submit'), class: 'btn btn-primary'