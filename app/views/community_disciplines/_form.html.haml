= form_for @community_discipline do |f|
  - if @community_discipline.errors.any?
    #error_explanation
      %h2= "#{pluralize(@community_discipline.errors.count, "error")} prohibited this community_discipline from being saved:"
      %ul
        - @community_discipline.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :discipline
    = f.text_field :discipline
  .field
    = f.label :community
    = f.text_field :community
  .actions
    = f.submit 'Save'
