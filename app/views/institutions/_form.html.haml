= form_for @institution do |f|
  - if @institution.errors.any?
    #error_explanation
      %h2= "#{pluralize(@institution.errors.count, "error")} prohibited this institution from being saved:"
      %ul
        - @institution.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :institution_name
    = f.text_field :institution_name
  .field
    = f.label :short_institution_name
    = f.text_field :short_institution_name
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :phone_number
    = f.text_field :phone_number
  .actions
    = f.submit 'Save'
