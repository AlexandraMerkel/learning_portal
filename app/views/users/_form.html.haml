= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg


  .field 
    = f.label :last_name
    = f.text_field :last_name
  .field 
    = f.label :first_name
    = f.text_field :first_name
  .field 
    = f.label :second_name
    = f.text_field :second_name
  .field
    = f.label :birthday
    = f.date_select :birthday
  .field
    = f.label :sex
    = f.select(:sex,  sex_options(f.object.sex))
  .field
    = f.label :write_something_important_about_yourself
    = f.text_area :user_description
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.text_field :password
  .field
    = f.label :password_confirmation
    = f.text_field :password_confirmation
  .actions
    = f.submit 'Save'
