= form_for @message_user do |f|
  - if @message_user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message_user.errors.count, "error")} prohibited this message_user from being saved:"
      %ul
        - @message_user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :viewing
    = f.select(:viewing, viewing_options(f.object.viewing))
  .field
    = f.label :message_id
    = f.select(:message_id, message_options(f.object.message_id))
  .field
    = f.label :user_id
    = f.select(:user_id, user_options(f.object.user_id))
  .actions
    = f.submit 'Save'
