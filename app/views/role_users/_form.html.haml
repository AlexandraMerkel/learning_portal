= form_for @role_user do |f|
  - if @role_user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@role_user.errors.count, "error")} prohibited this role_user from being saved:"
      %ul
        - @role_user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :info
    = f.text_field :info
  .field
    = f.label :user_id
    = f.select(:user_id, user_options(f.object.user_id))
  .field
    = f.label :role_id
    = f.select(:role_id, role_options(f.object.role_id))
  .actions
    = f.submit 'Save'
